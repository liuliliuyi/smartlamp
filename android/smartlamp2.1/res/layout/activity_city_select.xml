<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:orientation="vertical" >

    <include layout="@layout/titile_top" />

    <LinearLayout
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_middle"
        android:background="@drawable/bg_item_top"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/rb_province"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:checked="true"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:singleLine="true"
            
            android:textSize="@dimen/small_text_size"
            android:text="省" />

        <View
            android:layout_width="1px"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/hintColor" />

        <TextView
            android:id="@+id/rb_city"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:singleLine="true"
            
            android:textSize="@dimen/small_text_size"
            android:text="市" />

        <View
            android:layout_width="1px"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/hintColor" />

        <TextView
            android:id="@+id/rb_district"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:singleLine="true"
           
            android:textSize="@dimen/small_text_size"
            android:text="区/县" />
        
        
        <TextView
            android:id="@+id/rb_street"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:checked="true"
            android:gravity="center"
            android:paddingBottom="8dp"
           
            android:paddingTop="8dp"
            android:singleLine="true"
            android:textSize="@dimen/small_text_size"
            android:text="镇/街道" />

        <View
            android:layout_width="1px"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/hintColor" />

        <TextView
            android:id="@+id/rb_village"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:singleLine="true"
            
            android:textSize="@dimen/small_text_size"
            android:text="村/社区" />

        <View
            android:layout_width="1px"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/hintColor" />

        <TextView
            android:id="@+id/rb_group"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:singleLine="true"
            
            android:textSize="@dimen/small_text_size"
            android:text="屯/组" />
    
    
    
    
    
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
         >
        
        <View
            android:id="@+id/indicator"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/blue" />

    </RelativeLayout>

    <ListView
        android:id="@+id/lv_city"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        
        android:cacheColorHint="@drawable/transparent"
        android:fadingEdge="none"
        android:listSelector="@drawable/transparent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height_middle"
        android:background="@drawable/hintColor" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="@dimen/item_margin_large"
        android:background="@drawable/bg_shape"
        android:text="完成"
        android:textColor="@color/white" />

</LinearLayout>