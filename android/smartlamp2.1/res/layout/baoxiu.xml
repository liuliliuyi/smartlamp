<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include layout="@layout/titile_top" />

    <ScrollView
        android:id="@+id/scrollView_mine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/sex1"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" >

                    <TextView
                        android:id="@+id/yongf11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="故障类型"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                      
                        android:layout_marginRight="20dp"
                        android:paddingRight="5.0dip"
                        android:singleLine="true"
                        android:text="请选择故障类型" >
                    </TextView>
                </RelativeLayout>

                <ImageView
                   
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="@drawable/txtline" />

                <RelativeLayout
                    android:id="@+id/sex2"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" >

                    <TextView
                        android:id="@+id/yongf22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="设备sn"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/sex22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:paddingRight="5.0dip"
                        android:singleLine="true"
                        android:background="@null"
                        android:textSize="13.0dp" >
                    </EditText>
                </RelativeLayout>

                <ImageView
                   
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="@drawable/txtline" />

                <LinearLayout
                    android:id="@+id/mine_vipbuy"
                    android:layout_width="fill_parent"
                    android:layout_height="140dp"
                    android:layout_marginTop="15dp" >

                    <EditText
                        android:id="@+id/baoxiu_adress"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1.0"
                        android:background="@null"
                        android:focusableInTouchMode="true"
                        android:hint="请输入故障描述"
                        android:paddingRight="5.0dip"
                        android:textColor="@color/textcolor_light_grey" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#ffcccccc" />

                <Button
                    android:id="@+id/baoxiu_queding"
                    android:layout_width="fill_parent"
                    android:layout_height="43dp"
                    android:layout_marginBottom="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_shape"
                    android:text="完成"
                    android:textColor="@color/white"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>