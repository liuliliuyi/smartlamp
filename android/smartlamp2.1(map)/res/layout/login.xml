<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/android_layout_bg"
    android:orientation="vertical" >

    <include layout="@layout/titile_top" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none" >

        <LinearLayout
            android:id="@+id/layout_login"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

           

          
                

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp" 
                    android:background="@color/white"
                    android:layout_marginTop="8dp"
                   
                    >

                    <ImageView
                        android:id="@+id/yongf"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="24dp"
                        android:background="@drawable/iphone" />

                    <EditText
                        android:id="@+id/nicheng"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_toRightOf="@+id/yongf"
                        android:background="@null"
                        android:focusableInTouchMode="true"
                        android:hint="用户名或手机号"
                        android:paddingRight="5.0dip"
                        android:singleLine="true"
                        android:textColor="@color/tishi"
                        android:textColorHint="@color/tishi"
                        android:textSize="15.0dp" >
                    </EditText>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/face_image"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="@drawable/txtline" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp" 
                    android:background="@color/white"
                    >

                    <ImageView
                        android:id="@+id/mim"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="24dp"
                        android:background="@drawable/locked" />

                    <EditText
                        android:id="@+id/zhuche_mima"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/mim"
                        android:background="@null"
                        android:focusableInTouchMode="true"
                        android:hint="......"
                        android:maxLength="18"
                        android:paddingRight="5.0dip"
                        android:password="true"
                        android:singleLine="true"
                        android:textColor="@color/tishi"
                        android:textColorHint="@color/tishi"
                        android:textSize="15.0dp" >
                    </EditText>
                </RelativeLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="@drawable/txtline" />
                
                
                  <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp" 
                    android:background="@color/white"
                    android:layout_marginTop="8dp"
                   
                    >

                    <ImageView
                        android:id="@+id/yongf22"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="24dp"
                        android:background="@drawable/license" />

                    <EditText
                        android:id="@+id/zufuhao"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_toRightOf="@+id/yongf22"
                        android:background="@null"
                        android:focusableInTouchMode="true"
                        android:hint="租户号"
                        android:paddingRight="5.0dip"
                        android:singleLine="true"
                        android:textColor="@color/tishi"
                        android:textColorHint="@color/tishi"
                        android:textSize="15.0dp" >
                    </EditText>
                </RelativeLayout>
                
                   <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="@drawable/txtline" />

                <Button
                    android:id="@+id/login"
                    android:layout_width="fill_parent"
                    android:layout_height="38dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="27dp"
                    android:background="@drawable/dengluanniu"
                    android:text="登录"
                    android:textColor="@color/white"
                    android:textSize="13dp" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:visibility="invisible"
                    android:layout_marginTop="8dp" >
                <TextView
                        android:id="@+id/reg_zhuche"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="24dp"
                        android:text="手机快速注册"
                        android:textColor="@color/tishi"
                        android:textSize="13dp" />
                    <TextView
                        android:id="@+id/wangjimima"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="24dp"
                        android:text="重置密码"
                        android:textColor="@color/tishi"
                        android:textSize="13dp" />

                    
                </RelativeLayout>
           
        </LinearLayout>
    </ScrollView>

</LinearLayout>