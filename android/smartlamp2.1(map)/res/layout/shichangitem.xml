<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
   
    >
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="175dp" 
    android:layout_margin="28dp"
    android:background="@drawable/alert_bg"
    >
    <TextView
        android:id="@+id/shichang_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="3dp"
        android:text="需要一个都市爱情剧本"
        
        android:textSize="14dp" />

    <View
        android:id="@+id/shichang_xian"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/shichang_name"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:background="#ffcccccc" />

    <TextView
        android:id="@+id/shichang_neirong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shichang_xian"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="86dp"
        android:layout_marginTop="8dp"
        android:text="我想买这个剧b"
        android:textSize="12dp" />

   <com.parking.widget.RoundImageView
        android:id="@+id/shichang_imageView1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="22dp"
        android:layout_marginTop="45dp"
       
        android:scaleType="centerCrop"
        imagecontrol:border_inside_color="#fff7f2e9"
        imagecontrol:border_outside_color="#ffd5d1c8"
        imagecontrol:border_thickness="2dp" />

      
    <TextView
        android:id="@+id/shijian_mingzhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/shichang_imageView1"
        android:layout_below="@+id/shichang_imageView1"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="13dp"
        android:text="油炸乌龟"
        
        android:textSize="11dp" />

    <ImageView
        android:id="@+id/shichang_imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/shijian_mingzhi"
        android:layout_below="@+id/shijian_mingzhi"
        android:layout_marginTop="5dp"
        android:src="@drawable/huifu" />

    <TextView
        android:id="@+id/shichang_cishu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shijian_mingzhi"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/shichang_imageView2"
        android:text="23"
        android:textColor="#E371CE"
        android:textSize="13dp" />

   
    <TextView
        android:id="@+id/shichang_shijian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/shichang_neirong"
        android:layout_alignTop="@+id/shichang_cishu"
        android:text="2015-1-3"
        android:textSize="12dp" />
</RelativeLayout>
</RelativeLayout>