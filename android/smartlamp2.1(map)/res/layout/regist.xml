<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/android_layout_bg"
    android:orientation="vertical" >

    <include layout="@layout/titile_top" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none" >

        <LinearLayout
            android:id="@+id/layout_login"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="320dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white" >

                    <ImageView
                        android:id="@+id/yongf"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="24dp"
                        android:background="@drawable/iphone" />

                    <EditText
                        android:id="@+id/regist_shouji"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_toRightOf="@+id/yongf"
                        android:background="@null"
                        android:focusableInTouchMode="true"
                        android:hint="请输入手机号"
                        android:paddingRight="5.0dip"
                        android:singleLine="true"
                        android:textColor="@color/tishi"
                        android:textColorHint="@color/tishi"
                        android:textSize="14.0dp" >
                    </EditText>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/face_image"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                   
                    android:background="@drawable/txtline" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                   
                    android:background="@color/white" >

                    <ImageView
                        android:id="@+id/mim"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="24dp"
                        android:background="@drawable/email" />

                    <EditText
                        android:id="@+id/zhuche_yanzhengma"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/mim"
                        android:background="@null"
                        android:focusableInTouchMode="true"
                        android:hint="请输入验证码"
                        android:maxLength="18"
                        android:paddingRight="5.0dip"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="@color/tishi"
                        android:textColorHint="@color/tishi"
                        android:textSize="14.0dp" >
                    </EditText>

                    <TextView
                        android:id="@+id/zhuche_yzm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="25dp"
                        android:text="获取验证码"
                        android:textColor="@color/red"
                        android:textSize="14.0dp" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_marginRight="14dp"
                        android:layout_toLeftOf="@+id/zhuche_yzm"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:background="#ffcccccc" />
                </RelativeLayout>

               <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="@drawable/txtline" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/white" >

                    <ImageView
                        android:id="@+id/regist_listence"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="24dp"
                        android:background="@drawable/license" />

                    <EditText
                        android:id="@+id/regist_listence1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/regist_listence"
                        android:background="@null"
                        android:focusableInTouchMode="true"
                        android:hint="请输入车牌号"
                        android:maxLength="18"
                        android:paddingRight="5.0dip"
          
                        android:singleLine="true"
                        android:textColor="@color/tishi"
                        android:textColorHint="@color/tishi"
                        android:textSize="14.0dp" >
                    </EditText>
                </RelativeLayout>
                
                
                
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="@drawable/txtline" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/white" >

                    <ImageView
                        android:id="@+id/regist_mimaimg"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="24dp"
                        android:background="@drawable/locked" />

                    <EditText
                        android:id="@+id/regist_mima"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/regist_mimaimg"
                        android:background="@null"
                        android:focusableInTouchMode="true"
                        android:hint="请输入密码"
                        android:maxLength="18"
                        android:paddingRight="5.0dip"
                        android:password="true"
                        android:singleLine="true"
                        android:textColor="@color/tishi"
                        android:textColorHint="@color/tishi"
                        android:textSize="14.0dp" >
                    </EditText>
                </RelativeLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="@drawable/txtline" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/white" >

                    <ImageView
                        android:id="@+id/regist_mimaimg1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="24dp"
                        android:background="@drawable/locked" />

                    <EditText
                        android:id="@+id/regist_mima1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/regist_mimaimg1"
                        android:background="@null"
                        android:focusableInTouchMode="true"
                        android:hint="请再次输入密码"
                        android:maxLength="18"
                        android:paddingRight="5.0dip"
                        android:password="true"
                        android:singleLine="true"
                        android:textColor="@color/tishi"
                        android:textColorHint="@color/tishi"
                        android:textSize="14.0dp" >
                    </EditText>
                </RelativeLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="@drawable/txtline" />

                <Button
                    android:id="@+id/regist_login"
                    android:layout_width="fill_parent"
                    android:layout_height="38dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/dengluanniu"
                    android:text="注册"
                    android:textColor="@color/white"
                    android:textSize="13dp" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="8dp" >
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>