<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout 
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">  

       
    </FrameLayout>
    
    <LinearLayout 
        android:id="@+id/home_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button_nav"
        android:baselineAligned="false">
        
  		<LinearLayout  
            android:layout_width="0dp"  
            android:layout_height="wrap_content"  
            android:layout_weight="1" 
            android:layout_marginTop="8dp"
            android:orientation="vertical" >  
            <ImageView  
	            android:id="@+id/home_icon"  
	            android:layout_width="20dp"  
	            android:layout_height="20dp"  
	            android:layout_gravity="center_horizontal"  
	            android:src="@drawable/shouye" 
	            />  
	        <TextView  
	            android:id="@+id/home_text"  
	            android:layout_width="wrap_content"  
	            android:layout_height="wrap_content"  
	            android:layout_gravity="center_horizontal"  
	            android:text="@string/home"  
	            android:textSize="12dp"
	            android:textColor="@color/icon_bar_text_color" />  
        </LinearLayout>
        
        <LinearLayout  
            android:id="@+id/dingdan_bar_layout"
            android:layout_width="0dp"  
            android:layout_height="wrap_content" 
            android:layout_weight="1" 
            android:layout_marginTop="8dp"
            android:visibility="invisible"
            android:orientation="vertical" >  
            <ImageView  
                android:id="@+id/dingdan_icon"  
                android:layout_width="20dp"  
                android:layout_height="20dp"  
                android:layout_gravity="center_horizontal"  
                android:src="@drawable/baibaoxiangbottom"
                 />  
            <TextView  
                android:id="@+id/dingdan_text"  
                android:layout_width="wrap_content"  
                android:layout_height="wrap_content"  
                android:layout_gravity="center_horizontal"  
                android:text="@string/dingdan"  
                android:textSize="12dp"
                android:textColor="@color/icon_bar_text_color" />  
        </LinearLayout> 
              
        <LinearLayout  
            android:id="@+id/my_bar_layout"
            android:layout_width="0dp"  
            android:layout_height="wrap_content" 
            android:layout_weight="1"   
            android:layout_marginTop="8dp"
            android:orientation="vertical" >  

            <ImageView  
                android:id="@+id/mycentre_icon"  
                android:layout_width="20dp"  
                android:layout_height="20dp"  
                android:layout_gravity="center_horizontal"  
                android:src="@drawable/yonghu"
               />  

            <TextView  
                android:id="@+id/mycentre_text"  
                android:layout_width="wrap_content"  
                android:layout_height="wrap_content"  
                android:layout_gravity="center_horizontal"  
                android:textSize="12dp"
                android:text="@string/mycentre"  
                android:textColor="@color/icon_bar_text_color" />  
        </LinearLayout> 

    </LinearLayout>

</LinearLayout>
