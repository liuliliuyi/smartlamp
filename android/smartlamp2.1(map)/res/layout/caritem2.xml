<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@color/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/cardetail_nav"
        android:layout_width="fill_parent"
        android:layout_height="85dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/alert"
        android:orientation="vertical" >

        <com.parking.widget.RoundImageView
            android:id="@+id/car_img1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/baibaoxiang"
            android:scaleType="centerCrop"
            imagecontrol:border_inside_color="#fff7f2e9"
            imagecontrol:border_outside_color="#ffd5d1c8"
            imagecontrol:border_thickness="2dp" />

        <TextView
            android:id="@+id/car_adress1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/car_img1"
            android:text="丰台宋家庄顶秀金瑞家园"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/car_count11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/car_adress1"
            android:layout_below="@+id/car_adress"
            android:layout_centerVertical="true"
            android:layout_marginTop="8dp"
            android:text="空车位数:"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/car_count1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/car_count11"
            android:layout_toRightOf="@+id/car_count11"
            android:text="140"
            android:textColor="@color/red" />

        <ImageView
            android:id="@+id/car_distanceimg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/car_count11"
            android:layout_below="@+id/car_count11"
            android:layout_marginTop="5dp"
            android:src="@drawable/place_order_address" />

        <TextView
            android:id="@+id/car_distance1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/car_count11"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/car_distanceimg1"
            android:text="140米" />

        <RelativeLayout
            android:id="@+id/car_daohang1"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/car_daohang" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>