<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:layout_margin="3dp"
        android:background="@drawable/carlife_bg"
        android:orientation="vertical" >

        <com.parking.widget.RoundImageView
            android:id="@+id/car_img1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/baibaoxiang"
            imagecontrol:border_inside_color="#fff7f2e9"
            imagecontrol:border_outside_color="#ffd5d1c8"
            imagecontrol:border_thickness="2dp" />

       

        <TextView
            android:id="@+id/car_countcar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/car_img1"
            android:text="空车位为:13"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/car_distance1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/car_countcar"
            android:layout_below="@+id/car_countcar"
            android:layout_marginTop="4dp"
            android:text="距离:12千米"
            android:textSize="8sp" />
    </RelativeLayout>

</RelativeLayout>